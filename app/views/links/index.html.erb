<h1>All Links</h1>
<%= render partial: 'shared/link_form', locals: {link: @link} %>

<table>
  <button class='show-read'>Show Read</button>
  <button class='show-unread'>Show Unread</button>
  <div class="link-filter">
    <label>Filter by Title or URL
      <input type="text" name="link-filter">
    </label>
  </div>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Read?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @user.links.each do |link| %>
      <% if link.read %>
        <tr class='link already-read' id='<%= link.id %>'>
          <td><%= link.title %></td>
          <td><%= link.url %></td>
          <td class='read-status'><%= link.read %></td>
          <td class='mark-as-unread'><button>Mark as Unread</button></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
        </tr>
      <% else %>
        <tr class='link' id='<%= link.id %>'>
          <td><%= link.title %></td>
          <td><%= link.url %></td>
          <td class='read-status'><%= link.read %></td>
          <td class='mark-as-read'><button>Mark as Read</button></td>
          <td><%= link_to 'Edit', edit_link_path(link) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<ul class="legend">
    <li><span class="top-link"></span> Top Link</li>
    <li><span class="hot-link"></span> Hot Link</li>
</ul>
